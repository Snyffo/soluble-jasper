{
    "name": "soluble/jasper",
    "description": "Jasper reports in PHP",
    "license": "MIT",
    "keywords": [
        "jasper",
        "jasperreports",
        "reports",
        "pdf",
        "phpjavabridge",
        "japha"
    ],
    "homepage": "http://soluble.io",
    "type": "library",
    "authors": [
        {
            "name": "SÃ©bastien Vanvelthem",
            "homepage": "https://github.com/belgattitude"
        }
    ],
    "require": {
        "php": "^7.1",
        "psr/log": "^1.0",
        "psr/http-message": "^1.0.1",
        "soluble/japha": "^2.3.0"
    },
    "require-dev" : {
        "friendsofphp/php-cs-fixer": "^2.6.0",
        "mikey179/vfsStream": "^1.6",
        "monolog/monolog": "^1.23.0",
        "pds/skeleton": "@dev",
        "phpstan/phpstan": "^0.8.5",
        "phpunit/phpunit": "^6.2",
        "roave/better-reflection": "2.0.0",
        "roave/security-advisories": "dev-master",
        "smalot/pdfparser": "^0.11.0",
        "thecodingmachine/phpstan-strict-rules": "^0.8.2",
        "zendframework/zend-diactoros": "^1.6"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Soluble\\Jasper\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JasperTest\\": [
                "tests/unit",
                "tests/functional",
                "tests/util"
            ]
        },
        "files": ["tests/JasperTestsFactories.php"]
    },

    "scripts": {
        "check": [
            "@cs-check",
            "@phpstan"
        ],
        "fix": [
            "@cs-fix"
        ],
        "test": "vendor/bin/phpunit",
        "cs-check": "vendor/bin/php-cs-fixer --diff --dry-run -v fix",
        "cs-fix": "vendor/bin/php-cs-fixer -v fix",
        "phpstan": "vendor/bin/phpstan analyse -l max -c phpstan.neon src tests",
        "phpds": "vendor/bin/pds-skeleton validate",
        "build-doc": "mkdocs build",
        "serve-doc": "mkdocs serve --dev-addr localhost:8094"
    },
    "suggest": {
        "monolog/monolog": "PSR-3 compatible logger",
        "zendframework/zend-diactoros": "PSR-7 message interfaces implementation"
    },
    "archive": {
        "exclude": [".sami.php", "phpstan.neon", "tests", "docs", ".travis", ".travis.yml", ".codeclimate.yml", ".coveralls.yml", ".scrutinizer.yml", ".php_cs", ".gitignore", "phpcs.xml"]
    }
}
